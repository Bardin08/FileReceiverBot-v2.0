{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "FileReceiverDb": ""
  },
  "MegaClient": {
    "ApplicationKey": "",
    "SynchronizeApiRequests": true,
    "ApiRequestAttempts": 17,
    "ApiRequestDelay": 100,
    "ApiRequestDelayFactor": 1.5,
    "BufferSize": 65536,
    "ChunksPackSize": 1048576,
    "ReportProgressChunkSize": 65536,
    "Login": "",
    "Password": ""
  },
  "BotSettings": {
    "Token": "",
    "UseLongPolling": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.MongoDB",
      "Serilog.Sinks.Console",
      "X.Serilog.Sinks.Telegram"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      // {
      //   "Name": "MongoDB",
      //   "Args": {
      //     "DatabaseUrl": "",
      //     "CollectionName": "",
      //     "CappedMaxSizeMb": "1024",
      //     "CappedMaxDocuments": "50000",
      //     "BatchPostingLimit ": 100,
      //     "Period": "0.00:10:00"
      //   }
      // },
      {
        "Name": "Telegram",
        "Args": {
          "Token": "",
          "ChatId": "",
          "ReadableApplicationName": "",
          "UseEmoji": true,
          "RestrictedToMinimumLevel": "Error",
          "BatchPostingLimit": 10,
          "Period": "0.00:10:00",
        }
      }
    ],
    "Properties": {
      "Application": "File Receiver Bot v2.0"
    }
  },
  "AllowedHosts": "*"
}
