{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Debug"
    }
  },
  "ConnectionStrings": {
    "FileReceiverDb": ""
  },
  "MegaClient": {
    "ApplicationKey": "",
    "SynchronizeApiRequests": true,
    "ApiRequestAttempts": 17,
    "ApiRequestDelay": 100,
    "ApiRequestDelayFactor": 1.5,
    "BufferSize": 65536,
    "ChunksPackSize": 1048576,
    "ReportProgressChunkSize": 65536,
    "Login": "",
    "Password": ""
  },
  "BotSettings": {
    "Token": "",
    "UseLongPolling": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.MongoDB",
      "X.Serilog.Sinks.Telegram"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MongoDB",
        "Args": {
          "DatabaseUrl": "",
          "CollectionName": "logs",
          "CappedMaxSizeMb": "1024",
          "CappedMaxDocuments": "50000",
          "BatchPostingLimit ": 10,
          "Period": "0.00:00:10"
        }
      },
      {
        "Name": "Telegram",
        "Args": {
          "Token": "",
          "ChatId": "",
          "ReadableApplicationName": "FileReceiverBot-Api",
          "UseEmoji": true,
          "RestrictedToMinimumLevel": "Error",
          "BatchPostingLimit": 5,
          "Period": "0.00:10:00",
          "Mode": "AggregatedNotifications"
        }
      }
    ],
    "Properties": {
      "Application": "File Receiver Bot v2.0"
    }
  },
  "AllowedHosts": "*"
}
